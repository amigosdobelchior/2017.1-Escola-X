<%= render "layouts/navbar" %>
<h1 class="text-uppercase text-center" id="title-list"><span class="fa fa-sticky-note text-left"></span> Matérias</h1>
<hr>
<section class="content-section" >
  <div class="container">
    <div class="pull-right">
      <%= link_to '<span class="fa fa-address-card"></span> Adicionar Matérias'.html_safe, add_classroom_path(@classroom), class:'btn btn-sm btn-warning' %>
    </div>
    <% @subjects.each do |subject| %>
      <div class="row item">
        <div class="col-sm-12 col-md-8 text-capitalize descript">
          <h3>Matéria: <%= subject.name_subject %></h3>
          <h4>Série: <%= subject.class_level %></h4>
          <h4>Professor Responsável: <%=subject.teacher.name %></h4>
          <%= link_to '<span class="fa fa-search-plus"></span> Mostrar'.html_safe, subject_path(subject), class:"btn btn-default" %>
          <%= link_to '<span class="fa fa-search-plus"></span> Notas'.html_safe, set_grades_path(subject_id: subject), class:"btn btn-success" %>
        </div>
      </div>
    <%end%>
  </div>
</section>
